{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "incremental": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "typeRoots": [
      "node_modules/@types",
    ],
  },
  "include": [
    "src/**/*.ts",
  ]
}
